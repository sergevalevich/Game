<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="OptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/round_option</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="OptionStyleSmall" parent="OptionStyle">
        <item name="android:textSize">@dimen/secondary_text_size_small</item>
    </style>

    <style name="OptionStyleLarge" parent="OptionStyle">
        <item name="android:textSize">@dimen/secondary_text_large</item>
        <item name="android:background">@drawable/round_option_big</item>
    </style>

    <style name="OptionStyleXLarge" parent="OptionStyle">
        <item name="android:textSize">@dimen/secondary_text_xlarge</item>
        <item name="android:background">@drawable/round_option_big</item>
    </style>

    <style name="OptionFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/option_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/option_side_margin</item>
        <item name="android:layout_marginRight">@dimen/option_side_margin</item>
    </style>

    <style name="OptionFrameStyleXLarge" parent="OptionFrameStyle">
        <item name="android:layout_marginBottom">@dimen/option_bottom_margin_xlarge</item>
        <item name="android:layout_marginLeft">@dimen/option_side_margin_xlarge</item>
        <item name="android:layout_marginRight">@dimen/option_side_margin_xlarge</item>
    </style>

    <!--<style name="ButtonStyle">-->
    <!--<item name="android:background">@drawable/play_button</item>-->
    <!--<item name="android:layout_height">@dimen/button_height</item>-->
    <!--<item name="android:textSize">@dimen/primary_text_size</item>-->
