<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:listDivider">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:listDivider">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="OptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/round_option</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_input</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">@dimen/input_field_side_padding</item>
        <item name="android:paddingRight">@dimen/input_field_side_padding</item>
        <item name="android:alpha">0.70</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/input_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/input_side_margin</item>
        <item name="android:layout_marginRight">@dimen/input_side_margin</item>
    </style>

    <style name="OptionFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/option_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/option_side_margin</item>
        <item name="android:layout_marginRight">@dimen/option_side_margin</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/play_button</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyleAuth" parent="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/input_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/input_side_margin</item>
        <item name="android:layout_marginRight">@dimen/input_side_margin</item>
    </style>

    <style name="PercentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginRight">@dimen/option_percent_label_end_margin</item>
    </style>

    <style name="ConfigPlayerIconStyle">
        <item name="android:layout_width">@dimen/config_players_icon_small</item>
        <item name="android:layout_height">@dimen/config_players_icon_small</item>
        <item name="android:layout_marginRight">@dimen/config_players_icon_small_end_margin</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/menu_item_size</item>
    </style>

</resources>
