    <style name="ButtonStyle">
        <item name="android:background">@drawable/play_button</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyleLarge" parent="ButtonStyle">
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="android:textSize">@dimen/primary_text_size_large</item>
    </style>

    <style name="ButtonStyleXLarge" parent="ButtonStyle">
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="android:textSize">@dimen/primary_text_size_xlarge</item>
    </style>

    <style name="PercentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginRight">@dimen/option_percent_label_end_margin</item>
    </style>

    <style name="PercentStyleBig" parent="PercentStyle">
        <item name="android:textSize">@dimen/secondary_text_large</item>
    </style>

    <style name="PercentStyleLarge" parent="PercentStyle">
        <item name="android:textSize">@dimen/secondary_text_xlarge</item>
    </style>

    <style name="PercentStyleSmall" parent="PercentStyle">
        <item name="android:textSize">@dimen/secondary_text_size_small</item>
    </style>
</resources>
