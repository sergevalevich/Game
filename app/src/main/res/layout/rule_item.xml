<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/card_bg"
              android:orientation="vertical"
              tools:background="@drawable/back">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_toggle"
        android:drawableRight="@drawable/ic_toggle"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/rule_title_vertical_padding"
        android:paddingLeft="@dimen/rule_title_side_padding"
        android:paddingRight="@dimen/rule_title_side_padding"
        android:paddingTop="@dimen/rule_title_vertical_padding"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/rule_title_size"
        android:textStyle="bold|italic"
        tools:text="Награды и достижения"/>


    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="500"
        app:el_expanded="false"
        app:el_translate_children="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/rule_side_padding"
            android:paddingRight="@dimen/rule_side_padding"
            android:paddingBottom="@dimen/rule_bottom_padding"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rule_image_height"
                android:layout_marginBottom="@dimen/rule_image_bottom_margin"
                android:scaleType="fitXY"
                tools:src="@drawable/rule_pic_15"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/secondary_text_size"
                tools:text="asdasdadasdasdasdasdasasdasdasdasdasdasdasdadasdasdasasdasd"/>

        </LinearLayout>

    </net.cachapa.expandablelayout.ExpandableLayout>

</LinearLayout>